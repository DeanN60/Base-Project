{
    "name": "base-project",
    "version": "1.0.0",
    "description": "Base HTML Project",
    "main": "index.html",
    "scripts": {
        "build:sass": "sass  --no-source-map src/sass:dist/css",
        "copy:assets": "copyfiles -u 1 ./src/assets/**.* dist",
        "copy:html": "copyfiles -u 1 ./src/*.html dist",
        "copy": "npm-run-all --parallel copy:*",
        "watch:assets": "onchange \"src/assets/**.*\" -- npm run copy:assets",
        "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
        "watch:sass": "sass  --no-source-map --watch src/sass:dist/css",
        "watch": "npm-run-all --parallel watch:*",
        "serve": "browser-sync start --server dist --files dist",
        "start": "npm-run-all copy --parallel watch serve",
        "build": "npm-run-all copy:html build:*",
        "postbuild": "postcss dist/css/*.css -u autoprefixer cssnano -r --no-map"
    },
    "author": "D. Dean Neighbour",
    "license": "ISC",
    "dependencies": {
        "autoprefixer": "^10.4.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.17",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss": "^8.4.6",
        "postcss-cli": "^9.1.0",
        "sass": "^1.49.7"
    }
}
